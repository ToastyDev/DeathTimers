<UI xmlns="http://www.blizzard.com/wow/ui/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

<Frame name="DTFrame" parent="UIParent" enableMouse="true" movable="true" hidden="false">
  <Size x="128" y="128"/>
  <Anchors>
    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent"/>
  </Anchors>
  <Layers>
    <Layer level="BACKGROUND">
      <Texture name="$parentBackgroundTex" parentKey="backgroundTex">
        <Size x="128" y="128"/>
        <Color r="0.0" g="0.0" b="0.0" a="0.3"/>
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
      </Texture>
    </Layer>
    <Layer level="OVERLAY">
      <FontString name="$parentTitle" inherits="GameFontNormal" text="Death Timers">
        <Anchors>
          <Anchor point="TOP">
            <Offset y="12"/>
          </Anchor>
        </Anchors>
      </FontString>
      <FontString name="$parentTimeLeft" inherits="GameFontNormal" text="Timer">
        <Anchors>
          <Anchor point="CENTER">
            <Offset y="25"/>
          </Anchor>
        </Anchors>
      </FontString>
      <FontString name="$parentCombatTime" inherits="GameFontNormal" text="Combat Time">
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
      </FontString>
      <FontString name="$parentGrpDPS" inherits="GameFontNormal" text="Group DPS">
        <Anchors>
          <Anchor point="CENTER">
            <Offset y="-25"/>
          </Anchor>
        </Anchors>
      </FontString>
    </Layer>
  </Layers>
  <Scripts>
    <OnLoad>
      DeathTimers_OnLoad(self)
    </OnLoad>
    <OnEvent>
      DeathTimers_OnEvent(self, event, ...)
    </OnEvent>
    <OnDragStart>
      self:StartMoving()
    </OnDragStart>
    <OnDragStop>
      self:StopMovingOrSizing()
    </OnDragStop>
  </Scripts>
</Frame>

<Frame name="DTOptionsFrame" parent="UIParent" hidden="true">
  <Size x="500" y="500"/>
  <Anchors>
    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent"/>
  </Anchors>
  <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" title="true">
    <BackgroundInsets>
      <AbsInset left="11" right="12" top="12" bottom="11"/>
    </BackgroundInsets>
  </Backdrop>
  <Layers>
    <Layer level="OVERLAY">
    </Layer>
  </Layers>
  <Frames>
    <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
      <Anchors>
        <Anchor point="TOPRIGHT">
          <Offset x="7" y="7"/>
        </Anchor>
      </Anchors>
    </Button>
  </Frames>
  <Scripts>
    <OnLoad>
      tinsert(UISpecialFrames, self:GetName())
    </OnLoad>
    <OnShow>
      PlaySound(839)
    </OnShow>
    <OnHide>
      PlaySound(840)
    </OnHide>
  </Scripts>
</Frame>

</UI>
