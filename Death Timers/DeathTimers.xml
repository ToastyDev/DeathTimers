<UI xmlns="http://www.blizzard.com/wow/ui/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

<Frame name="DTFrame" parent="UIParent" hidden="true">
  <Size x="128" y="128"/>
  <Anchors>
    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent"/>
  </Anchors>
  <Layers>
    <Layer level="BACKGROUND">
      <Texture name="$parentBackgroundTex" parentKey="backgroundTex">
      </Texture>
    </Layer>
    <Layer level="OVERLAY">
      <FontString name="$parentTitle" inherits="GameFontNormal" text="Death Timers">
        <Anchors>
          <Anchor point="TOP">
            <Offset y="15"/>
          </Anchor>
        </Anchors>
      </FontString>
    </Layer>
  </Layers>
  <Scripts>
    <OnLoad>
      DeathTimers_OnLoad(self)
    </OnLoad>
    <OnEvent>
      DeathTimers_OnEvent(self, event, ...)
    </OnEvent>
    <OnDragStart>
      self:StartMoving()
    </OnDragStart>
    <OnDragStop>
      self:StopMovingOrSizing()
    </OnDragStop>
  </Scripts>
</Frame>

<Frame name="DTOptionsFrame" parent="UIParent" hidden="true">
  <Size x="500" y="500"/>
  <Anchors>
    <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent"/>
  </Anchors>
  <Backdrop bgFile="" edgeFile="" title="true">
  </Backdrop>
  <Layers>
    <Layer level="OVERLAY">
    </Layer>
  </Layers>
  <Scripts>
    <OnLoad>
      tinsert(UISpecialFrames, self:GetName())
    </OnLoad>
    <OnShow>
      PlaySound("igCharacterInfoOpen")
    </OnShow>
    <OnHide>
      PlaySound("igCharacterInfoClose")
    </OnHide>
  </Scripts>
</Frame>

</UI>
